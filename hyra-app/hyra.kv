<RootWidget>:


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "snäckeskalet.png"   # your image filename here

    orientation: 'vertical'
    padding: 20
    spacing: 1
    orientation: 'vertical'
    padding: 20
    spacing: 15

    Label:
        text: "Hyra räknis"
        font_size: '24sp'
        bold: True
        size_hint_y: None
        height: self.texture_size[1] + 20

    TextInput:
        id: brf_input
        hint_text: "Avgift till BRF"
        input_filter: 'float'
        multiline: False
        size_hint_y: None
        height: 40  # or 50 for bigger input boxes

    TextInput:
        id: interest_input
        hint_text: "Ränta (per månad)"
        input_filter: 'float'
        multiline: False
        size_hint_y: None
        height: 40

    BoxLayout:
        id: fixed_costs_container
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        spacing: 5

    Button:
        text: "Räkna Totalt"
        size_hint_y: None
        height: 50
        background_color: 0.1, 0.5, 0.8, 1
        font_size: '18sp'
        color: 1, 1, 1, 1
        on_press: root.calculate_total()

    Button:
        text: "Generera Swish QR"
        size_hint_y: None
        height: 50
        background_color: 0.9, 0.4, 0.3, 1
        font_size: '18sp'
        color: 1, 1, 1, 1
        on_press: root.generate_qr()

    Image:
        id: qr_image
        size_hint_y: None
        height: 250

    Label:
        id: result_label
        text: "Fyll i kostnader och tryck på knappen"
        font_size: '18sp'
        markup: True          # <--- enable markup
        color: 0, 0.5, 0, 1  # default green color